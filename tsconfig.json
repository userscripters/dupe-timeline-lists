{
    "compilerOptions": {
        "strict": true,
        "removeComments": true,
        "allowJs": true,
        "checkJs": true,
        "lib": ["DOM", "DOM.Iterable", "ESNext"],
        "target": "es2019",
        "module": "es2020",
        "moduleResolution": "node",
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "noErrorTruncation": true,
        "skipLibCheck": true,
        "downlevelIteration": true,
        "outDir": "dist",
        "types": [
            "@userscripters/stackexchange-global-types",
            "jquery",
            "greasemonkey",
            "tampermonkey",
            "mocha",
            "chai",
            "chai-as-promised"
        ]
    },
    "exclude": ["dist"],
    "include": ["src"]
}
